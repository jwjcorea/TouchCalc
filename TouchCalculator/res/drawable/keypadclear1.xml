<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
         <shape>
            <gradient
                android:startColor="#1F201F"
                android:endColor="#cacaca"
                android:angle="90" />
           <!--  <stroke
                android:width="2dp"
                android:color="#dcdcdc" /> -->
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
         <shape>
            <gradient
                android:startColor="#1F201F"
                android:endColor="#cacaca"
                android:angle="90" />
           <!--  <stroke
                android:width="2dp"
                android:color="#dcdcdc" /> -->
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
         <shape>
            <gradient
                android:startColor="#1F201F"
                android:endColor="#cacaca"
                android:angle="270" />
           <!--  <stroke
                android:width="2dp"
                android:color="#dcdcdc" /> -->
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
